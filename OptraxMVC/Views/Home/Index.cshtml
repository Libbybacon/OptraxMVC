@{
    ViewData["Page"] = "Dashboard";
}
<div class="dash-container px-4" style="">
    <div class="cards-div dash-cards d-flex flex-column min-vh-100 pb-3">
        <div class="row dash-top m-0 g-3 pe-3">
            <div class="col-xxl-2 col-xl-4 col-6">
