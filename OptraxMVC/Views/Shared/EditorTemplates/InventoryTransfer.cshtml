@using OptraxDAL.Models.Inventory

@model InventoryTransfer

@{
    int i = (int?)ViewData["Index"] ?? 0;
    DropdownsVM drops = (DropdownsVM)(ViewData["Dropdowns"] ?? new());
    var model = Model;
}

<input type="hidden" name="PlantEvents[@i].Transfer.Date" value="@DateTime.Now" />
<input type="hidden" name="PlantEvents[@i].Transfer.UserID" value="@Model.EncryptedID" />

<div class="col-xl-4 col-6">
    @Html.LabelFor(m => m.OriginID)
    @Html.DropDownListFor(m => m.OriginID, drops.LocationSelects, "Select Origin Location", new { @class = $"form-select select2 attr" })
    @Html.ValidationMessageFor(m => m.OriginID, "", new { htmlAttributes = new { @class = "val-msg" } })
</div>
<div class="col-xl-4 col-6">
    @Html.LabelFor(m => m.DestinationID)
    @Html.DropDownListFor(m => m.DestinationID, drops.LocationSelects, "Select Origin Location", new { @class = $"form-select select2 attr" })
    @Html.ValidationMessageFor(m => m.DestinationID, "", new { htmlAttributes = new { @class = "val-msg" } })
</div>

<div class="col-xl-4 col-6">
    @Html.LabelFor(m => m.UnitCount)
    @Html.EditorFor(m => m.UnitCount, "", new { htmlAttributes = new { @class = $"form-control", @step=".01"} })
    @Html.ValidationMessageFor(m => m.UnitCount, "", new { htmlAttributes = new { @class = "val-msg" } })
</div>
<div class="col-xl-4 col-6">
    @Html.LabelFor(m => m.UnitUoM)
    @Html.DropDownListFor(m => m.UnitUoM, drops.UomSelects, "Select UoM", new { @class = $"form-select select2 attr" })
    @Html.ValidationMessageFor(m => m.UnitUoM, "", new { htmlAttributes = new { @class = "val-msg" } })
</div>
<div class="col-xl-4 col-6 mother-info">
    <div class="h-50"></div>
    <div class="d-flex justify-content-center">
        <label class="mt-2">
            Is Partial Transfer?
            @Html.RadioButtonFor(m => m.IsPartial, "", new { htmlAttributes = new { @class = $"form-check-input attr" } })
            @Html.ValidationMessageFor(m => m.IsPartial, "", new { @class = "val-msg" })
        </label>
    </div>
</div>
<div class="col-xl-4 col-6 mother-info">
    <div class="h-50"></div>
    <div class="d-flex justify-content-center">
        <label class="mt-2">
            Needs Approval?
            @Html.RadioButtonFor(m => m.NeedsApproval, "", new { htmlAttributes = new { @class = $"form-check-input attr" } })
            @Html.ValidationMessageFor(m => m.NeedsApproval, "", new { @class = "val-msg" })
        </label>
    </div>
</div>