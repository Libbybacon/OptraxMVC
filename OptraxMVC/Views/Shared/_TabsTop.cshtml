@model TabsVM


<ul class="nav nav-tabs justify-content-center" role="tablist">
    @for (int i = 0; i < Model.Tabs.Count; i++)
    {
        var tab = Model.Tabs[i];
        bool active = i == 0;
        string key = tab.TabKey;
        string divider = i < Model.Tabs.Count - 1 ? "divider" : "";

        <li class="nav-item px-lg-2 px-1 @(divider)" role="presentation">
            <button type="button"
                    role="tab"
                    id="@key-tab"
                    class="nav-link px-xl-4 px-md-3 px-1 @(active ? "active" : "")"
                    data-key="@key"
                    data-name="@tab.Name"
                    data-area="@Model.Area"
                    data-path ="@tab.ViewPath"
                    data-bs-toggle="tab"
                    data-bs-target="#@key"
                    aria-controls="@key"
                    aria-selected="@active">
                @(tab.Name)
            </button>
        </li>
    }
</ul>
