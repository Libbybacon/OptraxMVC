<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Optrax</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" /> <!-- Icons -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/spectrum-colorpicker2/dist/spectrum.min.css"> <!-- Color Picker -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" /> <!-- jsTree -->
    
    <link href="~/css/shared.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">

    <link rel="stylesheet" href="~/OptraxMVC.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="body">
    <div class="body-container d-flex flex-md-row flex-column w-100 h-100">
        <partial name="_SideNav" />
        <div class="content ">
            <main role="main" class="">
                @RenderBody()
            </main>
            @* Popup *@
            @*  <div id="overlay" class="ui-widget-overlay"></div> *@
            <div id="popup" class="popup">
                <div id="popupTop" class="popup-top w-100 px-2">
                    <div id="popupTopInner" class="popup-top-inner d-flex w-100">
                        <span id="popupTitle" class="popup-title"></span>
                        <button id="popupClose" class="popup-close">X</button>
                    </div>
                    <div class="popup-msg"></div>
                </div>
                <div id="popupContent" class="popup-content"></div>
            </div>
        </div>
    </div>

    <script src="~/dist/shared.bundle.js"></script>
    <script src="~/dist/main.bundle.js"></script>
    <script src="~/dist/site.bundle.js"></script>



@*     <script src="https://unpkg.com/imask"></script>  <!-- iMask --> *@
    <script src="https://kit.fontawesome.com/6e68fe6bdb.js" crossorigin="anonymous"></script> <!-- Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/jstree.min.js" defer></script> <!-- jsTree -->
    <script src="https://cdn.jsdelivr.net/npm/spectrum-colorpicker2/dist/spectrum.min.js"></script><!-- Color Picker -->
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Modules", required: false)
</body>
</html>
