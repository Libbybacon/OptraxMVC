@{
    string page = ViewData["Page"]?.ToString() ?? "";

    Dictionary<string, string> menuItems = new Dictionary<string, string>() {
        { "Grow", "flower2" },
        { "Inventory", "basket3" },
        { "Sales", "cash-stack" },
        { "Reports", "file-bar-graph" },
    };
}

<div class="side-nav d-flex flex-md-column flex-row justify-content-between bg-dark box-shadow p-2">
    <div class="logo-div pt-lg-0 pt-md-3 pt-0">
        <a href="/" class="text-decoration-none">
            <img src="~/content/logo-dk.png" alt="Logo" class="logo d-lg-block d-none" />
            <img src="~/content/logo-only-dk.png" alt="Logo" class="logo-sm d-lg-none d-flex" />
        </a>
    </div>
    <hr class="d-md-block d-none text-tan">
    <ul class="nav nav-pills d-flex flex-md-column flex-row mb-auto">
        <li class="nav-item ms-0 me-0 mt-md-2 mt-0">
            <a href="/"
               class="nav-link d-flex @(page == "Dashboard" ? "active" : "")">
                <i class="nav-bi bi text-tan bi-grid-3x3 me-lg-3 me-0"></i>
                <span class="nav-text d-lg-block d-none pt-2">Dashboard</span>
            </a>
        </li>
        @foreach (var item in menuItems)
        {
            <li class="nav-item ms-0 me-0 mt-md-2 mt-0">
                <a asp-controller="Tabs" asp-action="LoadTabs" asp-route-navarea="@item.Key"
                   class="nav-link d-flex @(page == item.Key ? "active" : "")">
                    <i class="nav-bi bi text-tan bi-@(item.Value) me-lg-3 me-0"></i>
                    <span class="nav-text d-lg-block d-none pt-2">@item.Key</span>
                </a>
            </li>
        }
        <li id="nav-hide-li">
            <div id="nav-hide" class="d-md-flex d-none box-shadow">
                <div class="nav-hide-tab">
                    <i id="hide-nav" class="hide-bi bi bi-chevron-compact-left text-tan"></i>
                    <i id="show-nav" class="hide-bi bi bi-chevron-compact-right text-tan d-none"></i>
                </div>
            </div>
        </li>
    </ul>
    <ul class="nav bot-nav mb-0 ">
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Logout" class="nav-link">
                <span>Logout</span>
            </a>
        </li>
    </ul>
</div>

