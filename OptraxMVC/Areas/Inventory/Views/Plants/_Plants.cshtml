@using OptraxDAL.Models.Inventory
@using OptraxDAL.ViewModels

@model IEnumerable<Plant>

<div class="p-md-3 p-0 pt-0">
    <div id="filterCard">
        <button type="button" id="filterDrop" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#filters" aria-expanded="false" aria-controls="filters">Filters</button>
        <div id="filters" class="collapse">
            <div class="tag-list flex-wrap m-0 p-2">
            </div>
        </div>
    </div>
    <div class="table-div  px-lg-3 px-2">
        <div class="table-responsive">
            <div id="tableMsg"></div>
            <table id="plant-table" class="grp-table table table-responsive w-100">
                <thead>
                    <tr>
                        <th class="show-child">
                            <button class="toggle toggle-all">
                                <i class="bi bi-chevron-down show-i d-none"></i>
                                <i class="bi bi-chevron-up hide1 hide-i"></i>
                            </button>
                        </th>
                        <th>Strain</th>
                        <th>Crop Number</th>
                        <th>Mother</th>
                        <th>Start Type</th>
                        <th>Growth Phase</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/inventory/plants.js"></script>
<script src="/js/inventory/inventory.js"></script>
