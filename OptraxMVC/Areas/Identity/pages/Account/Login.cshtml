@page
@model OptraxMVC.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-bg">
    <div class="login-card card m-auto ">
        <div class="inner-card">
            <section>
                <div class="logo w-100 d-flex justify-content-center">
                        <img src="~/content/logos/logo-grn.png" alt="Logo" class="mx-auto" />
                </div>
                <div class="w-100 d-flex justify-content-center">
                        <div class="logo-label">Track seed to sale grow operations - simply</div>
                </div>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control idInput" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label login-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label ms-auto">
                                <input class="form-check-input me-1" asp-for="Input.RememberMe" />
                            </label>
                            <span class="pt-1">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                        </div>

                    </div>
                    <div class="my-3">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg">Log in</button>
                    </div>
                    <div class="d-flex flex-lg-row flex-column">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        <a asp-page="./Register" class="ms-lg-auto" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

