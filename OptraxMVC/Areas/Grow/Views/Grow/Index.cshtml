@using OptraxDAL.Models.Grow
@using OptraxDAL.Models.Inventory

@{
    ViewData["Page"] = "Grow";

    List<RoomLocation> rooms = ViewBag.Rooms;
    var tabs = new Dictionary<string, string>{
        {"room", "Rooms"},
        {"crop", "Crops"},
        {"plant", "Plants"},
        {"strain", "Strains"},
        {"schedule", "Schedule"},
        {"activity", "Activity"},
    }.ToList();
}

<div class="top-tabs box-shadow">
    <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">

        @for(int i = 0; i < tabs.Count; i ++) 
        {
            var tab = tabs[i];
            bool active = i == 0;
            string divider = i < tabs.Count - 1 ? "divider" : "";
            
            <li class="nav-item px-xm-2 px-1 @(divider)" role="presentation">

                <button type="button" role="tab" id="@(tab.Key)-tab" class="nav-link px-sm-5 px-1 @(active ? "active" : "")" data-bs-toggle="tab"
                data-bs-target="#@(tab.Key)"
                aria-controls="@(tab.Key)"
                aria-selected="@active">
                    @(tab.Value)
                </button>

            </li>
        }
    </ul>
</div>
<div class="tab-content p-0" id="growContent">
    <div class="tab-pane pe-0 fade show active" id="room" role="tabpanel" aria-labelledby="room-tab">
        <div class="inner-tab cust-scroll row m-0 d-flex col-12">
            @await Html.PartialAsync("_Rooms", rooms)
        </div>
    </div>
    <div class="tab-pane fade" id="crop" role="tabpanel" aria-labelledby="crop-tab">...</div>
    <div class="tab-pane fade" id="plant" role="tabpanel" aria-labelledby="plant-tab">...</div>
    <div class="tab-pane fade" id="strain" role="tabpanel" aria-labelledby="strain-tab">...</div>
    <div class="tab-pane fade" id="schedule" role="tabpanel" aria-labelledby="schedule-tab">...</div>
    <div class="tab-pane fade" id="activity" role="tabpanel" aria-labelledby="activity-tab">...</div>
</div>

