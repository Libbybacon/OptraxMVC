@using GrowFlow.Models.Equipment
@model IEnumerable<Light>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PPFD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BulbType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColorSpectrum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverageAreaSF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LifespanHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voltage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PPFD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BulbType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColorSpectrum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverageAreaSF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LifespanHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voltage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
