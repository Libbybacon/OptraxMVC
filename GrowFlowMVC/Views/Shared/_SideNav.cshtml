
@{
    string page = ViewData["Page"]?.ToString() ?? "";
}
<div class="sideNav bg-dark box-shadow p-3">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 text-decoration-none">
        <div class="logo">
            <img src="~/content/logo-bright3.png" alt="Logo" />
        </div>
    </a>
    <hr class="text-tan">
    <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
            <a asp-area="" asp-controller="Home" class="nav-link d-flex @(page == "Home" ? "active" : "")"><i class="bi text-tan bi-grid-3x3-gap me-3"></i><span>Dashboard</span></a>
        </li>
        <li class="nav-item ">
            <a asp-area="Grow" asp-controller="Grow" class="nav-link d-flex @(page == "Grow" ? "active" : "")"><i class="bi bi-flower2 text-tan  me-3"></i><span>Grow</span></a>
        </li>
        <li class="nav-item">
            <a href="#" class="nav-link d-flex @(page == "Harvest" ? "active" : "")"><i class="bi bi-scissors text-tan me-3"></i><span>Harvest</span></a>
        </li>
        <li class="nav-item">
            <a href="#" class="nav-link d-flex @(page == "Inventory" ? "active" : "")"><i class="bi bi-basket3 text-tan me-3"></i><span>Inventory</span></a>
         </li>
        <li class="nav-item">
            <a href="#" class="nav-link d-flex @(page == "Reports" ? "active" : "")"><i class="bi bi-file-bar-graph text-tan me-3"></i><span>Reports</span></a>
